<div class="container-fluid">
  <%= form_with(model: @role, local: true) do |f| %>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Role Name</label>
        <%= f.text_field :name, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <%= f.submit :submit, class:'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
