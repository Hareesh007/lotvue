<div class="container-fluid">
  <%= link_to "Show Users", user_list_path, class: "add", remote: true ,method: 'POST'%>
<div id="user_list">

</div>
  <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>First Name</label>
        <%= f.text_field :firname, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Last Name</label>
        <%= f.text_field :lastname, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Email</label>
        <%= f.text_field :email, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Select Role</label>
        <%= f.select :role_id, options_for_select(Role.role_status.collect {|p| [ p.name.titleize, p.id ]}), { }, { class: "form-control  chosen-select", id: "role_status", multiple: true } %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <%= f.submit :submit, class:'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
<script>
$(function(){
    $(".chosen-select").chosen({});
})
</script>
