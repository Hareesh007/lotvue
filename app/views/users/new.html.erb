<div class="container-fluid">
  <%= form_with(url: create_user_path, local: true) do |f| %>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>First Name</label>
        <%= f.text_field :firname, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Last Name</label>
        <%= f.text_field :lastname, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <label>Email</label>
        <%= f.text_field :email, class:'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%=f.fields_for :user_roles do |ff|%>
      <div class="col-sm-4">
        <label>Select Role</label>
        <%= ff.select :role_id, options_for_select(Role.role_status.collect {|p| [ p.name.titleize, p.id ]}), { }, { class: "form-control  chosen-select", id: "role_status", multiple: true } %>
      </div>
      <% end %>
    </div>
    <div class="form-group row">
      <div class="col-sm-4">
        <%= f.submit :submit, class:'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
<script>
$(function(){
    $(".chosen-select").chosen({});
})
</script>
